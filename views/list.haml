%div.list-group
  - companies.each do |company|
    %div.list-group-item.company
      %h4
        %a{ :href => company['website'], :absolute => true }= company['name']
      %ul
      - if company['address']
        %li= company['address']
      - if company['email']
        %li= company['email']
      - if company['keywords']
        %ul
          -company['keywords'].each do |keyword|
            = partial :keyword, :locals => { :keyword => keyword }

%ul.keywords
  - keywords.each do |keyword|
    %li.keyword
      = partial :keyword, :locals => { :keyword => keyword }
